{
    
	"manifest_version": 2,
	"name": "LianjiaSpider",
	"version": "1.0.0",
    "description": "SpiderForXX",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "img/icon.jpg"
    },
     "content_scripts": [
        {
            "matches": ["https://cd.lianjia.com/ershoufang/*"],
            "run_at": "document_idle",
            "js": [
                "home.js"
            ],
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        
    ],

    "permissions": ["storage", "declarativeContent",  "activeTab", "windows", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "type": "module",
        "persistent": true
    }
}